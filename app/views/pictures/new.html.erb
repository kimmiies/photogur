<h1>Add a picture</h1>

<%= form_for @picture do |f| %>
<!--  the form is now for @picture, which comes from model class defined in controller-->
<!-- now the form is set up to work with the model -->
  <p>
    <%= f.label :artist %><br>
    <%= f.text_field :artist %>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
